{
  "name": "shareable-service",
  "version": "1.0.0",
  "description": "Backend service to power the Shareable frontend",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "TS_NODE_FILES=true node ./build/src/server.js",
    "prestart:dev": "docker-compose up -d",
    "start:dev": "TS_NODE_FILES=true nodemon ./src/server.ts",
    "start:dev:debug": "TS_NODE_FILES=true nodemon --inspect ./src/server.ts",
    "clean-containers": "docker-compose down",
    "show-containers": "docker ps"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^13.13.9",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.11",
    "node-fetch": "^2.6.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typescript": "^3.8.3",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.14",
    "@types/node-fetch": "^2.5.7",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.3",
    "ts-node": "^8.9.1"
  }
}
